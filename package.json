{
  "name": "@iptv/xmltv",
  "description": "An extremely fast XMLTV parser and generator for Node and the browser.",
  "version": "0.1.4",
  "license": "MIT",
  "author": {
    "name": "ekto",
    "url": "https://ekto.tv/"
  },
  "main": "./dist/xmltv.umd.cjs",
  "module": "./dist/xmltv.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/xmltv.js",
      "require": "./dist/xmltv.umd.cjs"
    }
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "xmltv",
    "xml",
    "tv",
    "iptv",
    "parser",
    "generator",
    "epg",
    "electronic program guide",
    "electronic programme guide"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "tsc",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:ci": "vitest --run --coverage.enabled --coverage.reporter='text-summary'",
    "benchmark": "vitest bench",
    "benny": "ts-node --esm ./benchmark/benchmark.ts",
    "nanobench": "ts-node --esm ./benchmark/nanobench.ts",
    "self": "ts-node --esm ./benchmark/self-bench.ts",
    "changeset": "changeset",
    "prerelease": "pnpm run build && pnpm run test:ci",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@types/argparse": "^2.0.10",
    "@types/node": "^18.15.11",
    "@vitest/coverage-c8": "^0.29.8",
    "argparse": "^2.0.1",
    "benny": "^3.7.1",
    "epg-parser": "^0.2.0",
    "fast-xml-parser": "^4.1.3",
    "nanobench": "^3.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.1.0",
    "vitest": "^0.29.8",
    "xmltv": "^0.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ektotv/xmltv.git"
  },
  "volta": {
    "node": "20.3.1"
  }
}
